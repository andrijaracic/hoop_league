@model List<HoopLeague.Models.ViewModels.VestViewModel>

@{
    ViewData["Title"] = "Vesti";

    var mainNews = Model?.FirstOrDefault();
    var otherNews = Model?.Skip(1).ToList() ?? new List<HoopLeague.Models.ViewModels.VestViewModel>();
}

<style>
    .news-page {
        max-width: 1200px;
        margin: 40px auto 60px auto;
        padding: 0 20px;
    }

        .news-page h1 {
            font-size: 32px;
            font-weight: 800;
            margin-bottom: 25px;
        }

    /* ===== HERO (najnovija vest) ===== */

    .news-hero {
        width: 100%;
        background: #fff;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0,0,0,0.12);
        margin-bottom: 35px;
    }

        .news-hero img {
            width: 100%;
            height: 340px;
            object-fit: cover;
            display: block;
        }

    .news-hero-body {
        padding: 20px 22px 18px 22px;
    }

    .news-hero-title {
        font-size: 26px;
        font-weight: 800;
        margin-bottom: 10px;
    }

    .news-hero-text {
        color: #555;
        margin-bottom: 10px;
    }

    .news-hero-date {
        font-size: 13px;
        color: #888;
        font-weight: 600;
    }

    /* ===== OSTALЕ VESTI – GRID 3 u redu ===== */

    .news-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
    }

    .news-card {
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.10);
        display: flex;
        flex-direction: column;
    }

        .news-card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            display: block;
        }

    .news-card-body {
        padding: 14px 16px 12px 16px;
    }

    .news-card-title {
        font-size: 18px;
        font-weight: 700;
        margin-bottom: 6px;
    }

    .news-card-text {
        font-size: 14px;
        color: #555;
        margin-bottom: 6px;
    }

    .news-card-date {
        font-size: 12px;
        color: #888;
        font-weight: 600;
    }

    .news-hero img {
        height: 260px;
    }

    }
</style>

<div class="news-page">
    <h1>Vesti</h1>

    @if (mainNews != null)
    {
        
        <article class="news-hero">
            <img src="~/@mainNews.SlikaUrl" alt="@mainNews.Naslov" />

            <div class="news-hero-body">
                <div class="news-hero-title">@mainNews.Naslov</div>
                <div class="news-hero-text">@mainNews.KratakTekst</div>
                <div class="news-hero-date">@mainNews.Datum.ToString("dd.MM.yyyy")</div>
            </div>
        </article>
    }

    @if (otherNews.Any())
    {
        
        <section class="news-grid">
            @foreach (var v in otherNews)
            {
                <article class="news-card">
                    <img src="~/@v.SlikaUrl" alt="@v.Naslov" />

                    <div class="news-card-body">
                        <div class="news-card-title">@v.Naslov</div>
                        <div class="news-card-text">@v.KratakTekst</div>
                        <div class="news-card-date">@v.Datum.ToString("dd.MM.yyyy")</div>
                    </div>
                </article>
            }
        </section>
    }
    else if (mainNews == null)
    {
        <p>Nema vesti za prikaz.</p>
    }
</div>

