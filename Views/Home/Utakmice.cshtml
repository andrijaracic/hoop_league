@model List<HoopLeague.Models.ViewModels.GameCardViewModel>

@{
    int selectedRunda = ViewBag.SelectedRunda != null ? (int)ViewBag.SelectedRunda : 1;
}

<style>
    /* ====== SLIDER ZA RUNDE ====== */
    .rounds-wrapper {
        margin: 30px 0 25px 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .rounds-container {
        overflow-x: auto;
        white-space: nowrap;
        display: flex;
        gap: 8px;
        padding: 6px 4px;
        scrollbar-width: none;
        -ms-overflow-style: none;
        background: #ffffff;
        border-radius: 999px;
        border: 1px solid #dddddd;
    }

        .rounds-container::-webkit-scrollbar {
            display: none;
        }

    .round-pill {
        min-width: 46px;
        padding: 6px 10px;
        border-radius: 999px;
        border: 1px solid #d0d0d0;
        text-align: center;
        font-weight: 600;
        font-size: 14px;
        color: #555;
        background: #f7f7f7;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        transition: 0.2s;
    }

        .round-pill:hover {
            background: #ffe5c2;
            border-color: #ff8a00;
            color: #000;
        }

        .round-pill.active {
            background: #ff8a00;
            border-color: #ff8a00;
            color: #fff;
        }

    .round-arrow {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        border: none;
        background: #ffffff;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        font-size: 18px;
    }

        .round-arrow:hover {
            background: #f2f2f2;
        }


    /* ================== KARTICE UTAKMICA – EUROLEAGUE STYLE ================== */
    .team-name {
        font-weight: 700;
        font-size: 18px;
        text-align: center;
        white-space: normal !important; /* omogućava prelazak u drugi red */
        word-wrap: break-word;
        line-height: 1.2;
        max-width: 220px; /* da bude sličnije Euroleague kartici */
        display: block;
    }


    .games-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-bottom: 40px;
    }

    .game-card {
        background: #ffffff;
        border-radius: 18px;
        border: 1px solid #e0e0e0;
        padding: 14px 22px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 20px;
    }

    /* LEVA KOLONA – VREME / ARENA */
    .game-left {
        display: flex;
        flex-direction: column;
        gap: 4px;
        min-width: 120px;
    }

    .game-time {
        font-size: 16px;
        font-weight: 800;
        color: #111;
    }

    .game-venue {
        font-size: 12px;
        font-weight: 600;
        color: #888;
        text-transform: uppercase;
    }

    /* SREDINA – TIMOVI + REZULTAT / VS */
    .game-center {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 40px;
    }

    .team-block {
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .team-block img {
            width: 38px;
            height: 38px;
            object-fit: contain;
        }

    

    /* SCORE BOX – različit prikaz za gotove i buduće utakmice */
    .score-wrapper {
        min-width: 120px;
        border-radius: 14px;
        overflow: hidden;
        display: flex;
        align-items: stretch;
        justify-content: center;
        font-weight: 900;
        font-size: 20px;
    }

    .score-part {
        flex: 1;
        padding: 6px 0;
        text-align: center;
        background: #f7f7f7;
        color: #222;
    }

        .score-part.winner {
            background: #00e47a;
            color: #111;
        }

        .score-part.loser {
            background: #f0f0f0;
            color: #555;
        }

    .vs-box {
        padding: 6px 20px;
        border-radius: 999px;
        border: 1px solid #dcdcdc;
        font-weight: 800;
        font-size: 16px;
        color: #777;
        background: #fafafa;
    }

    .game-status {
        font-size: 13px;
        font-weight: 600;
        color: #777;
        margin-top: 4px;
        text-align: center;
    }

    /* DESNO – DUGME / STRELICA */
    .game-right {
        min-width: 140px;
        display: flex;
        justify-content: flex-end;
    }

    .btn-overview {
        padding: 8px 22px;
        border-radius: 999px;
        border: 1px solid #111;
        background: #fff;
        font-weight: 700;
        font-size: 14px;
        cursor: pointer;
        transition: 0.2s;
    }

        .btn-overview:hover {
            background: #111;
            color: #fff;
        }

    .btn-arrow {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        border: 1px solid #ddd;
        background: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        cursor: pointer;
        transition: 0.2s;
    }

        .btn-arrow:hover {
            background: #111;
            color: #fff;
        }

</style>

<h2 class="standings-title">Sve utakmice</h2>

<!-- ====== SLIDER ZA RUNDE ====== -->
<div class="rounds-wrapper">
    <button class="round-arrow" type="button" onclick="slideRounds(-1)">❮</button>

    <div id="roundSlider" class="rounds-container">
        @for (int i = 1; i <= 38; i++)
        {
            var activeClass = i == selectedRunda ? "active" : "";
            <a class="round-pill @activeClass"
               href="@Url.Action("Utakmice", "Home", new { runda = i })">
                @i
            </a>
        }
    </div>

    <button class="round-arrow" type="button" onclick="slideRounds(1)">❯</button>
</div>

<!-- ====== LISTA UTAKMICA ZA IZABRANU RUNDU ====== -->
<div class="games-list">
    @if (Model != null && Model.Any())
    {
        foreach (var u in Model)
        {
            var finished = u.PoeniDomacin > 0;
            var homeWin = finished && u.PoeniDomacin > u.PoeniGost;

            <div class="game-card">
                <!-- LEVA STRANA: vreme / „arena” (placeholder) -->
                <div class="game-left">
                    <div class="game-time">@u.Datum.ToString("HH:mm")</div>
                    <div class="game-venue">Round @u.Runda</div>
                </div>

                <!-- SREDINA: timovi + rezultat/VS -->
                <div class="game-center">
                    <div class="team-block">
                        <span class="team-name">@u.Domacin</span>
                        <img src="~/@u.DomacinLogo" alt="@u.DomacinSkracenica" />
                    </div>

                    <div>
                        @if (finished)
                        {
                            <div class="score-wrapper">
                                <div class="score-part @(homeWin ? "winner" : "loser")">
                                    @u.PoeniDomacin
                                </div>
                                <div class="score-part @(!homeWin ? "winner" : "loser")">
                                    @u.PoeniGost
                                </div>
                            </div>
                            <div class="game-status">Ended</div>
                        }
                        else
                        {
                            <div class="vs-box">VS</div>
                            <div class="game-status">
                                @u.Datum.ToString("dd.MM.yyyy")
                            </div>
                        }
                    </div>

                    <div class="team-block">
                        <img src="~/@u.GostLogo" alt="@u.GostSkracenica" />
                        <span class="team-name">@u.Gost</span>
                    </div>
                </div>

                <!-- DESNA STRANA: dugme -->
                <div class="game-right">
                    @if (finished)
                    {
                        <button class="btn-overview">Overview</button>
                    }
                    else
                    {
                        <button class="btn-arrow">➜</button>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <p style="color:white">Nema utakmica za izabranu rundu.</p>
    }
</div>

<script>
    function slideRounds(direction) {
        const slider = document.getElementById("roundSlider");
        slider.scrollLeft += direction * 200;
    }
</script>
