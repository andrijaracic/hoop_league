@model HoopLeague.Models.ViewModels.IgracViewModel

@{
    var punoIme = $"{Model.Igrac.Ime} {Model.Igrac.Prezime}";
}

<style>
    
</style>

<div class="player-page">
    <div class="player-card-main">

        <div class="player-hero">
            <div class="player-left">
                <div class="team-logo">
                    <img src="~/@Model.Igrac.TimLogo" alt="@Model.Igrac.Tim" />
                </div>

                <div class="badge-row">
                    <span class="badge"><span class="muted">Broj:</span> #@Model.Igrac.BrojDresa</span>
                    <span class="badge"><span class="muted">Pozicija:</span> @Model.Igrac.Pozicija</span>
                    @if (Model.Igrac.Visina.HasValue && Model.Igrac.Visina.Value > 0)
                    {
                        <span class="badge"><span class="muted">Visina:</span> @Model.Igrac.Visina cm</span>
                    }
                </div>
            </div>

            <div class="player-right">
                <h1 class="player-name">@punoIme</h1>

                <div class="player-sub">
                    <span><b>@Model.Igrac.Tim</b></span>
                    <span class="dot">•</span>
                    <span>@Model.Igrac.Drzava</span>
                    <span class="dot">•</span>
                    
                </div>

                <div class="meta-grid">
                    <div class="meta-item">
                        <div class="meta-label">Tim</div>
                        <div class="meta-value">@Model.Igrac.Tim</div>
                        
                    </div>

                    <div class="meta-item">
                        <div class="meta-label">Pozicija</div>
                        <div class="meta-value">@Model.Igrac.Pozicija</div>
                        <div class="small-note">Dres: #@Model.Igrac.BrojDresa</div>
                    </div>

                    <div class="meta-item">
                        <div class="meta-label">Država</div>
                        <div class="meta-value">@Model.Igrac.Drzava</div>
                        <div class="small-note">
                            @if (Model.Igrac.Visina.HasValue && Model.Igrac.Visina.Value > 0)
                            {
                                <span>Visina: @Model.Igrac.Visina cm</span>
                            }
                            else
                            {
                                <span>Visina: -</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        
        @if (Model.IgracStatistika != null)
        {
            <div class="player-stats">
                <div class="stats-row">

                    <div class="stat-box">
                        <div class="stat-arc">
                            <div class="stat-value">@Model.IgracStatistika.ProsekPoena.ToString("0.0")</div>
                        </div>
                        
                        <div class="stat-label">PTS</div>
                    </div>

                    <div class="stat-box">
                        <div class="stat-arc">
                            <div class="stat-value">@Model.IgracStatistika.TR.ToString("0.0")</div>
                        </div>
                        
                        <div class="stat-label">REB</div>
                    </div>

                    <div class="stat-box">
                        <div class="stat-arc">
                            <div class="stat-value">@Model.IgracStatistika.ProsekAsistencija.ToString("0.0")</div>
                        </div>
                        <div class="stat-label">AST</div>
                    </div>

                    <div class="stat-box">
                        <div class="stat-arc">
                            <div class="stat-value">@Model.IgracStatistika.STL.ToString("0.0")</div>
                        </div>
                        
                        <div class="stat-label">STL</div>
                    </div>

                    <div class="stat-box">
                        <div class="stat-arc">
                            <div class="stat-value">@Model.IgracStatistika.PIR.ToString("0.0")</div>
                        </div>
                        
                        <div class="stat-label">PIR</div>
                    </div>

                </div>
            </div>
        }


        <div class="player-actions">
            <a class="btn" href="@Url.Action("Igraci","Home")">← Nazad na igrače</a>

            <a class="btn btn-primary"
               href="@Url.Action("Tim", "Home", new { id = Model.Igrac.TimId })">
                Pogledaj tim →
            </a>
        </div>

    </div>
</div>


